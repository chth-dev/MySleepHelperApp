<UserControl x:Class="MySleepHelperApp.Views.CustomMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MySleepHelperApp.Views"
             mc:Ignorable="d" 
             Width="400"
             Height="300">
    <Grid>

        <!-- Фон окна с градиентом -->
        <Border Background="{StaticResource WindowBackground}"/>

        <!-- Декоративная рамка -->
        <Border BorderBrush="{StaticResource BorderGradient}"
                BorderThickness="4"
/>

    </Grid>
</UserControl>
