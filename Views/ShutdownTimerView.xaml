<UserControl x:Class="MySleepHelperApp.Views.ShutdownTimerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="Transparent">


    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock 
                x:Name="TitleText"
                Grid.Row="0"
                Text="Настройка таймера выключения"
                Style="{StaticResource HeaderTextStyle}"
                FontSize="26"
                Margin="20,20,20,0"
                HorizontalAlignment="Center"/>

            <!-- Центральная область -->
            <Grid
                Grid.Row="1"
                Width="500"
                Height="180"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border 
                    Grid.Column="0"
                    x:Name="InputPanel"
                    Margin="90,20">
                    <UniformGrid  Columns="3" VerticalAlignment="Center">
                        <!-- Часы -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Часы" 
                           Style="{StaticResource HeaderTextStyle}"
                           FontSize="20" 
                           Margin="0,0,0,5"/>
                            <Grid Width="80" Height="60">
                                <TextBox 
                                     x:Name="HoursTextBox"
                                     Style="{StaticResource TimeInputTextBox}"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     PreviewKeyDown="TextBox_PreviewKeyDown"
                                     GotFocus="TextBox_GotFocus"
                                     LostFocus="TextBox_LostFocus"/>
                                <TextBlock 
                                   x:Name="HoursTextBoxPlaceholder"
                                   Text="00"
                                   FontSize="30"
                                   Opacity="0.4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False" 
                                   FontWeight="Bold" 
                                   Style="{StaticResource HeaderTextStyle}"/>
                            </Grid>
                        </StackPanel>

                        <!-- Минуты -->
                        <StackPanel Margin="5">
                            <TextBlock 
                               Text="Минуты"
                               Style="{StaticResource HeaderTextStyle}"
                               FontSize="20" 
                               Margin="0,0,0,5"/>
                            <Grid Width="80" Height="60">
                                <TextBox 
                                     x:Name="MinutesTextBox"
                                     Style="{StaticResource TimeInputTextBox}"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     PreviewKeyDown="TextBox_PreviewKeyDown"
                                     GotFocus="TextBox_GotFocus"
                                     LostFocus="TextBox_LostFocus"/>
                                <TextBlock 
                                       x:Name="MinutesTextBoxPlaceholder"
                                       Text="00"
                                       FontSize="30"
                                       Opacity="0.4"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False" 
                                       FontWeight="Bold" 
                                       Style="{StaticResource HeaderTextStyle}"/>
                            </Grid>
                        </StackPanel>

                        <!-- Секунды -->
                        <StackPanel Margin="5">
                            <TextBlock 
                                   Text="Секунды" 
                                   Style="{StaticResource HeaderTextStyle}"
                                   FontSize="20" 
                                   Margin="0,0,0,5"/>
                            <Grid Width="80" Height="60">
                                <TextBox 
                                     x:Name="SecondsTextBox"
                                     Style="{StaticResource TimeInputTextBox}"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     PreviewKeyDown="TextBox_PreviewKeyDown"
                                     GotFocus="TextBox_GotFocus"
                                     LostFocus="TextBox_LostFocus"/>
                                <TextBlock 
                                       x:Name="SecondsTextBoxPlaceholder"
                                       Style="{StaticResource HeaderTextStyle}"
                                       Text="00"
                                       FontSize="30"
                                       Opacity="0.4"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False" 
                                       FontWeight="Bold"/>
                            </Grid>
                        </StackPanel>
                    </UniformGrid>
                </Border>

                <!-- Таймер (скрыт по умолчанию) -->
                <Border 
                    Grid.Column="0"
                    x:Name="TimerPanel" 
                    Margin="0">
                    <TextBlock 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       x:Name="CountdownText"
                       Style="{StaticResource HeaderTextStyle}"
                       FontSize="80"
                       Text="00:00:00"
                       TextAlignment="Center" 
                       FontWeight="Bold"/>
                </Border>

            </Grid>

            <!-- Кнопка -->
            <Button 
                x:Name="ScheduleButton"
                Grid.Row="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="20,50,10,5"
                Style="{StaticResource PrimaryButton}"
                Height="60" 
                Width="240"
                Padding="5">
                <TextBlock 
                    x:Name="ButtonText"
                    Text="Запланировать выключение компьютера" 
                    TextWrapping="Wrap" 
                    TextAlignment="Center" 
                    Style="{StaticResource HeaderTextStyle}"
                    FontSize="18"/>
            </Button>
        </Grid>

        <!-- Изображение -->
        <Image 
            Source="{StaticResource ShutdownImage}"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="10,0,0,5" Height="auto" Width="220">
        </Image>

    </Grid>
</UserControl>