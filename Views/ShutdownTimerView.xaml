<UserControl x:Class="MySleepHelperApp.Views.ShutdownTimerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="Transparent">


    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="*"/>
                <!-- Основное содержимое -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопки -->
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock 
                x:Name="TitleText"
                Grid.Row="0"
                Text="Настройка таймера выключения"
                Style="{StaticResource HeaderTextStyle}"
                FontSize="26"
                Margin="20,40,20,0"
                HorizontalAlignment="Center"/>

            <!-- Центральная область -->
            <Border 
                x:Name="InputPanel"
                Grid.Row="1"
                CornerRadius="8"
                Padding="5"
                Margin="120,30,120,50">
                <UniformGrid  Columns="3" VerticalAlignment="Center">
                    <!-- Часы -->
                    <StackPanel Margin="2">
                        <TextBlock Text="Часы" 
                                       Style="{StaticResource HeaderTextStyle}"
                                       FontSize="20" 
                                       Margin="0,0,0,5"/>
                        <Grid Width="80" Height="60">
                            <TextBox x:Name="HoursTextBox"
                                         Style="{StaticResource TimeInputTextBox}"
                                         PreviewTextInput="TextBox_PreviewTextInput"
                                         PreviewKeyDown="TextBox_PreviewKeyDown"
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBox_LostFocus"/>
                            <TextBlock x:Name="HoursTextBoxPlaceholder"
                                           Text="00"
                                           FontSize="26"
                                           Opacity="0.4"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False" 
                                           FontWeight="Bold" 
                                           FontFamily="Epilepsy Sans"/>
                        </Grid>
                    </StackPanel>

                    <!-- Минуты -->
                    <StackPanel Margin="2">
                        <TextBlock Text="Минуты"
                                       Style="{StaticResource HeaderTextStyle}"
                                       FontSize="20" 
                                       Margin="0,0,0,5"/>
                        <Grid Width="80" Height="60">
                            <TextBox x:Name="MinutesTextBox"
                                         Style="{StaticResource TimeInputTextBox}"
                                         PreviewTextInput="TextBox_PreviewTextInput"
                                         PreviewKeyDown="TextBox_PreviewKeyDown"
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBox_LostFocus"/>
                            <TextBlock x:Name="MinutesTextBoxPlaceholder"
                                           Text="00"
                                           FontSize="26"
                                           Opacity="0.4"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False" 
                                           FontWeight="Bold" 
                                           FontFamily="Epilepsy Sans"/>
                        </Grid>
                    </StackPanel>

                    <!-- Секунды -->
                    <StackPanel Margin="2">
                        <TextBlock Text="Секунды" 
                                       Style="{StaticResource HeaderTextStyle}"
                                       FontSize="20" 
                                       Margin="0,0,0,5"/>
                        <Grid Width="80" Height="60">
                            <TextBox x:Name="SecondsTextBox"
                                         Style="{StaticResource TimeInputTextBox}"
                                         PreviewTextInput="TextBox_PreviewTextInput"
                                         PreviewKeyDown="TextBox_PreviewKeyDown"
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBox_LostFocus"/>
                            <TextBlock x:Name="SecondsTextBoxPlaceholder"
                                           Text="00"
                                           FontSize="26"
                                           Opacity="0.4"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False" 
                                           FontWeight="Bold" 
                                           FontFamily="Epilepsy Sans"/>
                        </Grid>
                    </StackPanel>
                </UniformGrid>
            </Border>

            <!-- Таймер (скрыт по умолчанию) -->
            <Border 
                x:Name="TimerPanel" 
                Grid.Row="1"
                CornerRadius="8"
                Padding="5"
                Margin="120,30,120,50"
                Visibility="Collapsed">
                <TextBlock 
               x:Name="CountdownText"
               Style="{StaticResource HeaderTextStyle}"
               FontSize="70"
               Text="00:00:00"/>
            </Border>

            <!-- Кнопка -->
            <Button 
                x:Name="ScheduleButton"
                Grid.Row="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="20,20"
                Style="{StaticResource PrimaryButton}"
                Height="60" 
                Width="240"
                FontSize="18"
                Padding="10">
                <TextBlock 
                    x:Name="ButtonText"
                    Text="Запланировать выключение компьютера" 
                    TextWrapping="Wrap" 
                    TextAlignment="Center" 
                    FontFamily="Epilepsy Sans"/>
            </Button>
        </Grid>

        <!-- Изображение -->
        <Image 
                           Source="{StaticResource ShutdownImage}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="20,0,0,20" Height="auto" Width="210">
        </Image>

    </Grid>
</UserControl>