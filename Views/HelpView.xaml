<UserControl x:Class="MySleepHelperApp.Views.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">

    <!-- Главный Grid, который занимает всё пространство UserControl'а -->
    <Grid>
        <!-- Фон на весь экран -->
        <Grid.Background>
            <StaticResource ResourceKey="WindowBackground"/>
        </Grid.Background>

        <!-- ScrollViewer оборачивает весь контент, который нужно прокручивать -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 0 Заголовок -->
                    <RowDefinition Height="Auto"/>
                    <!-- 1 Строка с таймером -->
                    <RowDefinition Height="Auto"/>
                    <!-- 2 Строка с яркостью и картинкой -->
                    <RowDefinition Height="Auto"/>
                    <!-- 3 Строка с клавиатурой -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/> --><!-- Левый столбец --><!--
            <ColumnDefinition Width="auto"/> --><!-- Правый столбец --><!--
        </Grid.ColumnDefinitions>-->

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Возможности My Sleep Helper"
                   Style="{StaticResource HeaderTextStyle}"
                   FontSize="26"
                   Margin="20,20,20,15"
                   HorizontalAlignment="Center"/>

        <!-- Блок 1: Таймер выключения  -->
        <Border 
            Grid.Row="1" 
            Margin="7" 
            Padding="7" 
            Style="{StaticResource HelpBorderBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Иконка + название -->
                    <RowDefinition Height="Auto"/> <!-- Описание -->
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/> <!-- Иконка -->
                    <ColumnDefinition Width="*"/> <!-- Текст -->
                </Grid.ColumnDefinitions>

                <Image Grid.Row="0" 
                       Grid.Column="0" Grid.RowSpan="2"
                       Source="{StaticResource TimerIcon}"
                       Width="50" 
                       Height="50" 
                       Margin="5,5,10,5"/>

                <TextBlock Grid.Row="0" 
                           Grid.Column="1"
                           Text="Таймер выключения" 
                           Style="{StaticResource HeaderTextStyle}"
                           FontSize="22"
                           Margin="10,10,10,5"/>

                <TextBlock Grid.Row="1" 
                           Grid.Column="2" 
                           Grid.ColumnSpan="2"
                           Text="Автоматическое выключение компьютера через указанное время. Максимум - 23 часа, 59 минут, 59 секунд." 
                           FontSize="18" 
                           Margin="10"
                           TextWrapping="Wrap"
                           Width="350"
                           Style="{StaticResource HelpTextBoxStyle}" TextAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Блок 2: Регулировка яркости -->
        <Border 
            Grid.Row="2" 
            Margin="7" 
            Padding="7" 
            Style="{StaticResource HelpBorderBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                       Source="{StaticResource BrightnessIcon}"
                       Width="50" Height="50" Margin="5,5,10,5"/>

                <TextBlock Grid.Row="0" Grid.Column="1"
                           Text="Регулировка яркости" 
                           Style="{StaticResource HeaderTextStyle}"
                           FontSize="22"
                           Margin="10,10,10,5"/>

                <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                           Text="Уменьшение яркости экрана монитора для комфортного засыпания." 
                           FontSize="18" Margin="10"
                           TextWrapping="Wrap"
                           Width="350"
                           Style="{StaticResource HelpTextBoxStyle}" TextAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Блок 3: Блокировка клавиатуры -->
        <Border 
            Grid.Row="3" 
            Margin="7" 
            Padding="7" 
            Style="{StaticResource HelpBorderBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                       Source="{StaticResource KeyboardIcon}"
                       Width="50" Height="50" Margin="5,5,10,5"/>

                <TextBlock Grid.Row="0" Grid.Column="1"
                           Text="Блокировка клавиатуры" 
                           Style="{StaticResource HeaderTextStyle}"
                           FontSize="22"
                           Margin="10,10,10,5"/>

                <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                           Text="Отключение клавиатуры для защиты от случайных нажатий. Например, котиками." 
                           FontSize="18" Margin="10"
                           TextWrapping="Wrap"
                           Width="350"
                           Style="{StaticResource HelpTextBoxStyle}" TextAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Заголовок  -->
                <Grid Grid.Row="4">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                <TextBlock  
                   Grid.Row="0"
                   Text="Информация о приложении"
                   Style="{StaticResource HeaderTextStyle}"
                   FontSize="26"
                   Margin="20,20,20,15"
                   HorizontalAlignment="Center"/>

                    <TextBlock 
                       Grid.Row="1" 
                       FontSize="20" 
                       Margin="10"
                       TextWrapping="Wrap"
                       Width="350"
                       Style="{StaticResource HelpTextBoxStyle}">
                       Версия приложения: 1.0<LineBreak/>
                       Разработчик: chth
                     </TextBlock>

                </Grid>

                <Grid Grid.Row="5">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button 
                     x:Name="GitButton"
                     Grid.Row="0"
                     Grid.Column="0"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Bottom"
                     Margin="10"
                     Style="{StaticResource PrimaryButton}"
                     Height="40" 
                     Width="200"
                     FontSize="18"
                     Padding="0" 
                     Click="GitButton_Click">
                    <TextBlock 
                         Text="Страница Git" 
                         TextWrapping="Wrap" 
                         TextAlignment="Center" 
                         FontFamily="Epilepsy Sans"/>
                    </Button>

                    <Button 
                         x:Name="HelpButton"
                         Grid.Row="1"
                         Grid.Column="0"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Top"
                         Margin="10"
                         Style="{StaticResource PrimaryButton}"
                         Height="40" 
                         Width="200"
                         FontSize="18"
                         Padding="0" 
                         Click="HelpButton_Click">
                        <TextBlock 
                             Text="Сообщить об ошибке" 
                             TextWrapping="Wrap" 
                             TextAlignment="Center" 
                             FontFamily="Epilepsy Sans"/>
                    </Button>

                    <!-- Картинка -->
                    <Image 
                    Grid.Row="0" 
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Source="{StaticResource HelpImage}"
                    Margin="10,10,10,20"
                    Width="160" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                </Grid>

            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>