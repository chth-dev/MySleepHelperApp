<Window x:Class="MySleepHelperApp.TransparentOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KeyboardBlocker" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <!-- Основной прозрачный слой -->
    <Grid>
        <!-- Подсказка -->
        <TextBlock Text="Клавиатура заблокирована. Для разблокировки вернитесь в приложение My Sleep Helper."
                   Foreground="White"
                   Opacity="0.4"
                   HorizontalAlignment="Center"
                   Style="{StaticResource HelpTextBoxStyle}"
                   VerticalAlignment="Bottom"
                   Margin="5,45"
                   FontSize="15"/>
    </Grid>
</Window>