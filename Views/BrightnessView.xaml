<UserControl x:Class="MySleepHelperApp.Views.BrightnessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MySleepHelperApp.Views"
             mc:Ignorable="d" 
             Background="Transparent">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock 
            Grid.Row="0" 
            Grid.Column="0"
            Text="Регулировка&#10;затемнения экрана"
            Style="{StaticResource HeaderTextStyle}"
            FontSize="26"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom" TextAlignment="Center"/>

        <!-- Кнопка -->
        <Button 
            x:Name="BrightnessButton"
            Grid.Row="1" 
            Grid.Column="0"
            Style="{StaticResource PrimaryButton}"
            Height="60" 
            Width="240"
            FontSize="18"
            Padding="10"
            Click="BrightnessButton_Click"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="10">
            <TextBlock 
        x:Name="ButtonText"
        Text="Включить" 
        TextWrapping="Wrap" 
        TextAlignment="Center" 
        FontFamily="Epilepsy Sans"/>
        </Button>

        <Image 
            Grid.Row="0" 
            Grid.RowSpan="2" 
            Grid.Column="1"
            Source="{StaticResource BrightnessImage}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="0"
            Width="150"/>

        <StackPanel 
            x:Name="BrightnessControlsPanel"
            Grid.Row="2" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
            Margin="0,0,0,5"
            VerticalAlignment="Center"
            Orientation="Vertical"
            Opacity="0.5" 
            IsEnabled="False">

            <!-- Текст с текущим значением -->
            <TextBlock 
                x:Name="BrightnessValueText"
                Text="50%"
                Style="{StaticResource HeaderTextStyle}"
                HorizontalAlignment="Center"
                FontSize="26"
                Margin="5,0,5,5"/>

            <!-- Ползунок яркости -->
            <Slider 
                x:Name="BrightnessSlider"
                Style="{StaticResource SliderStyle}"
                Minimum="0"    
                Maximum="100"  
                Value="50"     
                Width="auto"
                Height="auto"
                Margin="10"
                ValueChanged="BrightnessSlider_ValueChanged"
                x:FieldModifier="public"/>
        </StackPanel>

        <TextBlock 
           Grid.Row="4" 
           Grid.Column="0"
           Grid.ColumnSpan="2"
           FontSize="20" 
           Margin="0"
           Style="{StaticResource HelpTextBoxStyle}"
           Text="Ctrl Alt &quot;-&quot; - уменьшить яркость  |  Ctrl Alt &quot;+&quot; - увеличить яркость">
        </TextBlock>

    </Grid>
</UserControl>