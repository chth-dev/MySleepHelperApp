<UserControl x:Class="MySleepHelperApp.Views.KeyboardLockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MySleepHelperApp.Views"
             mc:Ignorable="d" 
             Background="Transparent">
    <Grid Margin="30,60">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock 
            Grid.Row="0" 
            Grid.Column="0"
            Text="Блокировка клавиатуры"
            Style="{StaticResource HeaderTextStyle}"
            FontSize="26"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"/>

        <!-- Кнопка "Заблокировать" (изначально видима) -->
        <Button 
            x:Name="KeyboardLockButton"
            Grid.Row="1" 
            Grid.Column="0"
            Style="{StaticResource PrimaryButton}"
            Height="60" 
            Width="240"
            FontSize="18"
            Padding="10"
            Click="KeyboardLockButton_Click"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="10">
            <TextBlock 
                Text="Заблокировать" 
                TextWrapping="Wrap" 
                TextAlignment="Center" 
                FontFamily="Epilepsy Sans"/>
        </Button>

        <!-- Кнопка "Разблокировать" (изначально скрыта) -->
        <Button 
            x:Name="KeyboardUnLockButton"
            Grid.Row="1" 
            Grid.Column="0"
            Style="{StaticResource PrimaryButton}"
            Height="60" 
            Width="240"
            FontSize="18"
            Padding="10"
            Click="KeyboardUnLockButton_Click"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="10"
            Visibility="Collapsed">
            <TextBlock 
                Text="Разблокировать" 
                TextWrapping="Wrap" 
                TextAlignment="Center" 
                FontFamily="Epilepsy Sans"/>
        </Button>

        <Image 
            Grid.Row="0" 
            Grid.RowSpan="2" 
            Grid.Column="1"
            Source="{StaticResource KeyboardLockImage}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="10"
            Width="120"/>
    </Grid>
</UserControl>