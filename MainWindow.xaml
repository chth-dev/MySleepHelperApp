<Window x:Class="MySleepHelperApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sleep Helper" 
        Width="600"
        Height="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F2FF">

    <Grid Margin="15">
        <!-- Основной контейнер окна -->

        <Grid.RowDefinitions>
            <!-- 4 строки с вашими размерами -->
            <RowDefinition Height="50"/>
            <!-- Вкладки -->
            <RowDefinition Height="80"/>
            <!-- Заголовок -->
            <RowDefinition Height="100"/>
            <!-- Основное содержимое -->
            <RowDefinition Height="100"/>
            <!-- Кнопка -->
        </Grid.RowDefinitions>

        <!-- Заглушка для будущих вкладок -->
        <Border 
            Grid.Row="0" 
            Background="#FFE6D9F9" 
            CornerRadius="5"
            BorderBrush="#FFB89FE5"
            BorderThickness="1">

            <TextBlock 
                 Text="Вкладки будут здесь" 
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Foreground="#FF7A5CA8"
                 FontStyle="Italic" FontFamily="Epilepsy Sans" FontSize="20"/>
        </Border>

        <!-- Заголовок -->
        <TextBlock 
            Text="Настройка таймера выключения"
            Grid.Row="1"
            FontSize="26" 
            FontWeight="Bold"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Foreground="#FF7A5CA8" 
            Margin="0,0,0,8" FontFamily="Epilepsy Sans"/>

        <!-- Центральная панель с полями ввода -->
        <Grid Grid.Row="2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Поля ввода времени -->
            <StackPanel x:Name="InputPanel" Grid.Column="1" Orientation="Horizontal">

                <!-- Часы -->
                <StackPanel Margin="10">
                    <TextBlock 
                        Text="Часы" 
                        FontSize="20" 
                        HorizontalAlignment="Center" 
                        Foreground="#FF5C3C8A" 
                        Margin="0,0,0,5" FontFamily="Epilepsy Sans"/>

                    <Grid Width="70" Height="50">

                        <TextBox 
                         x:Name="HoursTextBox"
                         FontSize="26"
                         Background="White"
                         BorderBrush="#FFD9C9F0"
                         BorderThickness="2"
                         Foreground="#FF7A5CA8"
                         FontWeight="Bold"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         PreviewTextInput="TextBox_PreviewTextInput"
                         PreviewKeyDown="TextBox_PreviewKeyDown"
                         MaxLength="2"
                         Text=""
                         GotFocus="TextBox_GotFocus"
                         LostFocus="TextBox_LostFocus" 
                         FontFamily="Epilepsy Sans"/>

                        <TextBlock 
                           x:Name="HoursTextBoxPlaceholder"
                           Text="00"
                           FontSize="26"
                           Opacity="0.4"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False" 
                           FontWeight="Bold" FontFamily="Epilepsy Sans"/>
                    </Grid>
                </StackPanel>

                <!-- Минуты -->
                <StackPanel Margin="10" VerticalAlignment="Center">

                    <TextBlock 
                       Text="Минуты"
                       FontSize="20" 
                       HorizontalAlignment="Center" 
                       Foreground="#FF5C3C8A" 
                       Margin="0,0,0,5" FontFamily="Epilepsy Sans"/>

                    <Grid Width="70" Height="50">

                        <TextBox 
                           x:Name="MinutesTextBox"
                           FontSize="26"
                           Background="White"
                           BorderBrush="#FFD9C9F0"
                           BorderThickness="2"
                           Foreground="#FF7A5CA8"
                           FontWeight="Bold"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           PreviewTextInput="TextBox_PreviewTextInput"
                           PreviewKeyDown="TextBox_PreviewKeyDown"
                           MaxLength="2"
                           GotFocus="TextBox_GotFocus"
                           LostFocus="TextBox_LostFocus"
                           Text="" FontFamily="Epilepsy Sans"/>

                        <TextBlock 
                           x:Name="MinutesTextBoxPlaceholder"
                           Text="00"
                           FontSize="26"
                           Opacity="0.4"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False" FontWeight="Bold" FontFamily="Epilepsy Sans"/>
                    </Grid>
                </StackPanel>

                <!-- Секунды -->
                <StackPanel Margin="10" VerticalAlignment="Center">

                    <TextBlock 
                       Text="Секунды" 
                       FontSize="20" 
                       HorizontalAlignment="Center" 
                       Foreground="#FF5C3C8A" 
                       Margin="0,0,0,5" FontFamily="Epilepsy Sans"/>

                    <Grid Width="70" Height="50">

                        <TextBox 
                               x:Name="SecondsTextBox"
                               FontSize="26"
                               Background="White"
                               BorderBrush="#FFD9C9F0"
                               BorderThickness="2"
                               Foreground="#FF7A5CA8"
                               FontWeight="Bold"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               PreviewTextInput="TextBox_PreviewTextInput"
                               PreviewKeyDown="TextBox_PreviewKeyDown"
                               MaxLength="2"
                               GotFocus="TextBox_GotFocus"
                               LostFocus="TextBox_LostFocus"
                               Text="" FontFamily="Epilepsy Sans"/>

                        <TextBlock 
                               x:Name="SecondsTextBoxPlaceholder"
                               Text="00"
                               FontSize="26"
                               Opacity="0.4"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False" 
                               FontWeight="Bold" FontFamily="Epilepsy Sans"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Кнопка "запланировать" -->
        <Button x:Name="ScheduleButton" 
             Grid.Row="3"
             Height="60" 
             FontSize="16" 
             Width="240"
             HorizontalAlignment="Right"    
             VerticalAlignment="Bottom"
             Padding="10" 
             BorderBrush="#FFB89FE5"
             FontWeight="Bold" 
             BorderThickness="3"
             Background="#FFE6D9F9"
             Foreground="#FF5C3C8A" 
             Click="ScheduleShutdown_Click" 
             Margin="0,0,45,-10">

            <TextBlock 
                Text="Запланировать выключение компьютера" 
                TextWrapping="Wrap" 
                TextAlignment="Center" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                FontFamily="Epilepsy Sans" 
                Width="215" 
                FontSize="18"/>
        </Button>

        <!-- Кнопка "отменить" -->
        <Button 
             x:Name="CancelButton"
             Grid.Row="3"
             Height="60" 
             FontSize="16" 
             Width="240"
             HorizontalAlignment="Right"    
             VerticalAlignment="Bottom"
             Padding="10" 
             BorderBrush="#FFB89FE5"
             FontWeight="Bold" 
             BorderThickness="3"
             Background="#FFE6D9F9"
             Foreground="#FF5C3C8A" 
             Click="CancelButton_Click" 
             Margin="0,0,45,-10"
             Visibility="Collapsed">
            
            <TextBlock 
                Text="Отменить выключение компьютера" 
                TextWrapping="Wrap" 
                TextAlignment="Center" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                FontFamily="Epilepsy Sans" 
                Width="215" 
                FontSize="18"/>
        </Button>

        <!-- Таймер -->
        <Grid 
              x:Name="TimerPanel" 
              Visibility="Collapsed"
              Grid.Row="2" 
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            
            <TextBlock 
                x:Name="CountdownText"
                FontSize="60"
                FontWeight="Bold"
                Foreground="#FF7A5CA8"
                Text="00:00:00"
                HorizontalAlignment="Center" 
                FontFamily="Epilepsy Sans"/>
        </Grid>
        
    </Grid>
</Window>
