<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 1. ЦВЕТА -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF7853A7"/>
    <SolidColorBrush x:Key="ButtonColor" Color="#FFE6D9F9"/>
    <SolidColorBrush x:Key="LightPurple" Color="#FFE6D9F9"/>
    <SolidColorBrush x:Key="DarkPurple" Color="#FF5C3C8A"/>
    <SolidColorBrush x:Key="MediumPurple" Color="#FF7A5CA8"/>

    <!-- 2. ГРАДИЕНТЫ -->
    <LinearGradientBrush x:Key="WindowBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFD5EDFF" Offset="0"/>
        <GradientStop Color="#FFF9E4FF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BorderGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF7BBDFF" Offset="0"/>
        <GradientStop Color="#FFD6B9FF" Offset="0.5"/>
        <GradientStop Color="#FFCB84FF" Offset="1"/>
    </LinearGradientBrush>

    <!-- 3. СТИЛЬ ОКНА -->
    <Style TargetType="Window" x:Key="MainWindowStyle">
        <Setter Property="Background" Value="{StaticResource WindowBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderGradient}"/>
        <Setter Property="BorderThickness" Value="7"/>
    </Style>

    <!-- 4. СТИЛЬ ВЕРХНЕЙ ПАНЕЛИ -->
    <Style x:Key="TopPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LightPurple}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderGradient}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Height" Value="40"/>
    </Style>

    <!-- 5. СТИЛЬ ПАНЕЛИ ВКЛАДОК -->
    <Style x:Key="TabsPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LightPurple}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderGradient}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Margin" Value="10,10,10,0"/>
    </Style>

    <!-- 6. СТИЛЬ КНОПОК УПРАВЛЕНИЯ ОКНОМ -->
    <Style x:Key="WindowControlButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="3"
                        CornerRadius="2">
                        <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Только рамка при наведении -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 7. СТИЛЬ ОСНОВНЫХ КНОПОК -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <!-- Основные свойства -->
        <Setter Property="Background" Value="{StaticResource ButtonColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderGradient}"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="Padding" Value="15,5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="0"
                        Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Триггеры внутри шаблона -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 8. СТИЛЬ ТЕКСТОВЫХ ПОЛЕЙ -->
    <Style x:Key="TimeInputTextBox" TargetType="TextBox">
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource LightPurple}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Foreground" Value="{StaticResource MediumPurple}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="MaxLength" Value="2"/>
        <Setter Property="FontFamily" Value="{DynamicResource MainBoldFont}"/>
        <!-- Цвет рамки при фокусе -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource BorderGradient}"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 9. СТИЛЬ ЗАГОЛОВКОВ -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource MainBoldFont}"/>
        <Setter Property="Foreground" Value="{StaticResource MediumPurple}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 10. Стиль контейнера вкладок -->
    <Style x:Key="TabsContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LightPurple}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderGradient}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <!-- Только нижняя граница -->
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- 11. Стиль кнопки-вкладки с иконкой -->
    <Style x:Key="TabButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource DarkPurple}"/>
        <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <!-- Изменено: StackPanel с горизонтальной ориентацией -->
                        <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="5">
                            <Image x:Name="iconImage"
                               Source="{TemplateBinding Tag}"
                               Width="16"
                               Height="16"
                               Margin="0,0,5,0"/>
                            <TextBlock x:Name="textBlock"
                                   Text="{TemplateBinding Content}"
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <!-- Мягкий фиолетовый вместо акцентного -->
                            <Setter TargetName="border" Property="Background" Value="#FFEFE5FF"/>
                            <Setter TargetName="textBlock" Property="Foreground" Value="{StaticResource DarkPurple}"/>
                            <!-- Убираем белую тень иконки -->
                            <Setter TargetName="iconImage" Property="Effect" Value="{x:Null}"/>
                            <!-- Тонкая акцентная рамка снизу -->
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="0,0,0,2"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <!-- Полупрозрачное свечение -->
                            <Setter TargetName="border" Property="Background" Value="#15FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 12. Основной стиль для всех UserControl -->
    <Style x:Key="BaseUserControlStyle" TargetType="UserControl">
        <!-- Наследуем цветовую схему главного окна -->
        <Setter Property="Background" Value="{StaticResource WindowBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderGradient}"/>
    </Style>

    <!-- 13. Cтиль для плашек с подсказками -->
    <Style x:Key="HelpBorderBoxStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderGradient}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Margin" Value="10,10,10,0"/>
    </Style>

    <!-- 14. Стиль текста в блоках справки -->
    <Style x:Key="HelpTextBoxStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
        <Setter Property="Foreground" Value="{StaticResource MediumPurple}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 15. Простой кастомный стиль слайдера -->
    <Style x:Key="SliderStyle" TargetType="Slider">
        <!-- Базовые свойства -->
        <Setter Property="Foreground" Value="{StaticResource DarkPurple}"/>
        <Setter Property="Background" Value="{StaticResource LightPurple}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="TickPlacement" Value="None"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="300"/>

        <!-- Шаблон -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Track x:Name="PART_Track">
                            <!-- Заполненная часть -->
                            <Track.DecreaseRepeatButton>
                                <RepeatButton 
                                Background="{StaticResource MediumPurple}"
                                Focusable="False"
                                IsTabStop="False">
                                    <RepeatButton.Template>
                                        <ControlTemplate>
                                            <Border 
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="0"/>
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Track.DecreaseRepeatButton>

                            <!-- Пустая часть -->
                            <Track.IncreaseRepeatButton>
                                <RepeatButton 
                                Background="{StaticResource LightPurple}"
                                Focusable="False"
                                IsTabStop="False">
                                    <RepeatButton.Template>
                                        <ControlTemplate>
                                            <Border 
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="0"/>
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Track.IncreaseRepeatButton>

                            <!-- Простой бегунок -->
                            <Track.Thumb>
                                <Thumb>
                                    <Thumb.Template>
                                        <ControlTemplate>
                                            <Border 
                                                Background="{StaticResource LightPurple}"
                                                BorderBrush="{StaticResource DarkPurple}"
                                                BorderThickness="2"
                                                Width="18"
                                                Height="18"/>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 16. Стиль для кнопок OK/Да/Нет в ShowBox -->
    <Style x:Key="SimpleDialogButton" TargetType="Button">
        <!-- Текстовые свойства -->
        <Setter Property="FontFamily" Value="{DynamicResource MainBoldFont}"/>
        <Setter Property="Foreground" Value="{StaticResource MediumPurple}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>

        <!-- Размеры и отступы -->
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Margin" Value="10,0"/>
        <Setter Property="FontSize" Value="20"/>

        <!-- Цвета и рамка -->
        <Setter Property="Background" Value="#FFE6D9F9"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderGradient}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="Cursor" Value="Hand"/>

        <!-- Шаблон кнопки -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Основной контейнер -->
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Дополнительный элемент для подчеркивания -->
                        <Border x:Name="underline"
                            Height="1"
                            Background="Transparent"
                            VerticalAlignment="Bottom"
                            Margin="0,-2,0,0"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Эффекты при наведении -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="{StaticResource DarkPurple}"/>
                            <Setter TargetName="underline" Property="Background" Value="{StaticResource DarkPurple}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 17. Стиль для ScrollBar Thumb (ползунка) -->
    <!-- Ретро-стиль для ScrollBar Thumb (ползунка) -->
    <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <!-- Прямоугольный ползунок без скруглений -->
                    <Rectangle x:Name="thumbRect" 
                           Fill="{StaticResource MediumPurple}" 
                           Stroke="{StaticResource DarkPurple}" 
                           StrokeThickness="1"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="thumbRect" Property="Fill" Value="{StaticResource DarkPurple}"/>
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="thumbRect" Property="Fill" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для ScrollBar LineButton (стрелочки) -->
    <Style x:Key="ScrollBarLineButton" TargetType="{x:Type RepeatButton}">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Rectangle Fill="Transparent" Width="0" Height="0"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для ScrollBar PageButton -->
    <Style x:Key="ScrollBarPageButton" TargetType="{x:Type RepeatButton}">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Rectangle Fill="Transparent"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Основной стиль для ScrollBar -->
    <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
        <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
        <Setter Property="Width" Value="12"/>
        <Setter Property="MinWidth" Value="12"/>
        <Setter Property="Background" Value="{StaticResource LightPurple}"/>
        <Setter Property="BorderBrush" Value="{StaticResource DarkPurple}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollBar}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsMouseOver}">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Style="{StaticResource ScrollBarPageButton}" Command="{x:Static ScrollBar.PageUpCommand}"/>
                            </Track.DecreaseRepeatButton>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Style="{StaticResource ScrollBarPageButton}" Command="{x:Static ScrollBar.PageDownCommand}"/>
                            </Track.IncreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Style="{StaticResource ScrollBarThumb}"/>
                            </Track.Thumb>
                        </Track>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto"/>
                <Setter Property="MinWidth" Value="0"/>
                <Setter Property="Height" Value="16"/>
                <Setter Property="MinHeight" Value="16"/>
                <Setter Property="Background" Value="{StaticResource LightPurple}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>